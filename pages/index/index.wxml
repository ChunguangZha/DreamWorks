<view class="userinfo">
  <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
  <block wx:else>
    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    <text class="user-motto">{{motto}}</text>
  </block>
</view>
<view class="index">
  <view class="index-hd">
    <image class="index-logo" src="../../image/wechatHL.png"></image>
    <view class="index-desc">蜜蜂邻家铺，从田间到舌间。</view>
  </view>
  <view class="index-bd">
    <view class="kind-list-item">
      <block wx:for-items="{{shoplist}}" wx:key="{{item.shopId}}">
        <navigator class='navigator' url="../mall/shopping-item-details/shopping-item-details?shopId={{item.shopId}}">
          <image class="kind-list-img" src='../../pages/assets/{{item.imgName}}'></image>
          <view>
            <view style="width:70%">
              <text class="kind-item-title">{{item.title}}</text>
              <text class="kind-item-price">￥{{item.price}}</text>
            </view>
            <image style="float:right" class="cart" src='../../image/cart.png'></image>
          </view>
        </navigator>
      </block>
    </view>
  </view>
</view>